{%- macro to_string(item) -%}
{%- if item.first_name -%}{{item.first_name}} {% endif -%}
{%- if item.last_name -%}{{item.last_name}} {% endif -%}
({{item.login}})
{%- endmacro %}

{%- macro title(title='Users to validate') -%}
<span class="glyphicon glyphicon-user" aria-hidden="true"></span> {{title}}
{%- endmacro %}

{%- macro item(item, item_id) -%}
    <p id="{{item_id}}" class="lead" style="margin-left: 40px"><a href="/user/{{item.login}}">{{to_string(item)}}</a> <button class="btn btn-success btn-xs" onclick="$('#{{item_id}}').hide()"><span class="glyphicon glyphicon-ok" aria-hidden="true"></span></button> <button  class="btn btn-danger btn-xs"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></button></p>
{%- endmacro %}

