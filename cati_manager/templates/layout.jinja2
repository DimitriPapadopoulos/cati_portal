<!DOCTYPE html>
<html lang="{{request.locale_name}}">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="CATI security management">
    <meta name="author" content="CATI">
    <link rel="shortcut icon" href="{{request.static_url('cati_manager:static/images/catidb.png')}}">

    <title>{% set title %}{% block title %}{{title|default('CATI manager')}}{% endblock %}{% endset %}</title>

    <!-- Bootstrap core CSS -->
    <link href="{{request.static_url('cati_manager:static/css/bootstrap.min.css')}}" rel="stylesheet">

    <!-- Custom styles for this scaffold -->
    <link href="{{request.static_url('cati_manager:static/css/cati_manager.css')}}" rel="stylesheet">
    {%- block head %}{% endblock -%}
  </head>

  <body>
    <header>
        <nav role="navigation" class="navbar navbar-default navbar-fixed-top">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" data-target="#navbarCollapse" data-toggle="collapse" class="navbar-toggle">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <p class="navbar-text">{{site_name|default('CATI manager')}}</p>
            </div>
            <div id="navbarCollapse" class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li><a href="{{request.application_url}}"><i class="glyphicon glyphicon-home"></i></a></li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    {%- if request.authenticated_userid %}
                    <li><a href="#"><span class="glyphicon glyphicon-user"></span> {{request.authenticated_userid}} </a></li>
                    <li><a href="logout"><span class="glyphicon glyphicon-log-out"></span> Logout&nbsp;</a></li>
                    {%- else -%}
                    <li><a href="login"><span class="glyphicon glyphicon-log-in"></span> Login&nbsp;</a></li>
                    {% endif -%}
                </ul>
            </div>
        </nav>
    </header>
    <section>
      {%- for type in ('success', 'info', 'warning', 'danger') %}
        {%- for message in request.session.pop_flash(type) %}
          <div class="alert alert-{{type}} alert-dismissible" role="alert">
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
          </button>
          {{message|safe}}
          </div>
        {% endfor -%}
      {% endfor -%}
    {% block content %}{{content|safe}}{% endblock -%}
    </section>
    <footer>
        <nav class="navbar navbar-default navbar-fixed-bottom" role="navigation">
                <div class="container">
                    <a href="http://cati-neuroimaging.com"><img style="margin-top:5px;" src="{{ request.static_url('cati_manager:static/images/catidb.png') }}" class="img-responsive center-block" alt="CATI DB logo" width="70px"></a>
                </div>
            </nav>
    </footer>

<!--    <script>
    $(document).ready(function () {
      $("table").fixedHeaderTable({ footer: true, cloneHeadToFoot: true, fixedColumn: true, height: 300  });
    });
    </script>-->

    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="{{request.static_url('cati_manager:static/js/jquery.min.js')}}"></script>
    <script src="{{request.static_url('cati_manager:static/js/bootstrap.min.js')}}"></script>
    <script src="{{request.static_url('cati_manager:static/js/cati_manager.js')}}"></script>
    {% block script %}{% endblock -%}
  </body>
</html>
